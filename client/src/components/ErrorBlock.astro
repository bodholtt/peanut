---
import InsetBlock from "./InfoBlock.astro";
interface Props {
    className?: string
    iconClass?: string
}
const {className, iconClass} = Astro.props;
---

<InsetBlock error=true className={className}>
    <div class="flex flex-row gap-2 items-center">
        <span class={iconClass || "text-2xl"}>&#9888;</span>
        <slot/>
    </div>
</InsetBlock>