---
import {type User} from "../../global/types";
import PostsLayout from "../../layouts/PostsLayout.astro";

const { id } = Astro.params;

const response = await fetch(`${import.meta.env.API_URL}/user/${id}`);
const user: User = await response.json();

if (!user) {
    return new Response(null, {
        status: 404
    });
}

const creationDate = new Date(user.created_at);

---

<PostsLayout title={user.username}>
    <section class="p-8 h-full overflow-hidden flex flex-col gap-2 overflow-y-auto">
        <h1 class="text-6xl">{user.username}</h1>

        <div class="border border-twcolor-950 p-2 flex flex-row gap-2 w-fit">
            <div class="flex flex-col text-right font-bold">
                <p>user id</p>
                <p>join date</p>
            </div>

            <div class="flex flex-col">
            <p>{user.id}</p>
            <p>{creationDate.toUTCString()}</p>
            </div>
        </div>

        <hr class="m-4 border-twcolor-950"/>

        <h2 class="text-2xl">uploaded posts:</h2>
        <div class="flex items-start border border-twcolor-950 h-40 p-2 gap-2 overflow-x-auto">
            <div class="h-full w-64 border"></div>
            <div class="h-full w-64 border"></div>
            <div class="h-full w-64 border"></div>
            <div class="h-full w-64 border"></div>
            <div class="h-full w-64 border"></div>
            <div class="h-full w-64 border"></div>
            <div class="h-full w-64 border"></div>
        </div>

    </section>
</PostsLayout>

<style>
    .userinfo > th {
        @apply text-left;
        border: 1px solid;
    }
</style>